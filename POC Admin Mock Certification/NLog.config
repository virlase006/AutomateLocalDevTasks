<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="true">

  <variable name="appName" value="autocert" />

  <targets async="true">
    <target xsi:type="File"
            name="default"
            layout="${message}"
            fileName="../../../logs/${date:format=dd-MM-yyyy HH\:mm}.log"
            keepFileOpen="false"
            archiveFileName="$C:/logs/archives/Debug_${shortdate}.{##}.log"
            archiveNumbering="Sequence"
            archiveEvery="Day"
            maxArchiveFiles="30"
            />
  </targets>
  <rules>
    <logger name="validation" writeTo="default" minlevel="Info" />
  </rules>
</nlog>